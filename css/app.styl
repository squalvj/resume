.typed-cursor
	animation cursor 1s infinite
	font-size 18px
	color white

@keyframes cursor
	0%
		opacity 1
	100%
		opacity 0
	
@keyframes pulse
	0%
		opacity 1
		transform scale(0)
	100%
		opacity 0
		transform scale(3)
@keyframes label
	0% 
		opacity:0; 
		transform:translateY(10px)
	100%
		opacity:0.9; transform:translateY(0)
