.balloon
	position: absolute
	height: 120px
	width: 120px
	border: 5px solid red
	border-radius: 50%
	background: #333
	border-color: #848484
	right: -200px;
	top: -60px;
	&::before
		content: ""
		position: absolute
		left: calc(50% - 6px)
		bottom: -12px
		z-index: -1
